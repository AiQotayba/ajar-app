{
  "name": "ajar-platform",
  "version": "1.0.0",
  "description": "A comprehensive real estate rental and sale platform with multi-language support",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean",
    "web:dev": "pnpm --filter web dev",
    "web:build": "pnpm --filter web build",
    "admin:dev": "pnpm --filter admin dev",
    "admin:build": "pnpm --filter admin build",
    "seed": "pnpm --filter @ajar/seed seed",
    "seed:dev": "pnpm --filter @ajar/seed dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}
