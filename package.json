{
  "name": "ajar-platform",
  "version": "1.1.0",
  "description": "A comprehensive real estate rental and sale platform with multi-language support",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "deploy": "concurrently \"(cd ./apps/web && vercel --prod)\" \"(cd ./apps/admin && vercel --prod)\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:dev": "turbo run dev --filter=web",
    "web:build": "turbo run build --filter=web",
    "admin:dev": "turbo run dev --filter=admin", 
    "admin:build": "turbo run build --filter=admin"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}