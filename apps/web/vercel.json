{
  "version": 2,
  "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && pnpm install",
  "framework": "nextjs",
    "functions": {
        "src/app/**/*.tsx": {
            "runtime": "nodejs18.x"
        }
    },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "origin-when-cross-origin"
                },
                {
                    "key": "X-DNS-Prefetch-Control",
                    "value": "on"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/home",
            "destination": "/ar",
            "permanent": true
        },
        {
            "source": "/ar/home",
            "destination": "/ar",
            "permanent": true
        },
        {
            "source": "/en/home",
            "destination": "/en",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/((?!api|_next/static|_next/image|favicon.ico).*)",
            "destination": "/$1"
        }
    ]
}